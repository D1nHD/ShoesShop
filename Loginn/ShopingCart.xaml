<Window x:Class="Loginn.ShopingCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loginn"
        mc:Ignorable="d"
        Title="ShopingCart" Height="540" Width="912"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       
        >
    <Grid Background="#FF555555">
        
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

        <ScrollViewer  Grid.Column="2" Grid.Row="0"  Grid.RowSpan="3">
            <UniformGrid x:Name="Gridd" Rows="15" Columns="1">

                
                
            </UniformGrid>
        </ScrollViewer>
        <TextBox x:Name="Price" Text="Price:122"></TextBox>
        <TextBox x:Name="Count" Text="Price:122" Grid.Column="1"></TextBox>
        <Button x:Name="Buy" Grid.Row="1" Content="SHOP NOW"></Button>

    </Grid>
</Window>
